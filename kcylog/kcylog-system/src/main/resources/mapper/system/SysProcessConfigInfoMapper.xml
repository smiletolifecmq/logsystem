<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcylog.system.mapper.SysProcessConfigInfoMapper">
    
    <resultMap type="SysProcessConfigInfo" id="SysProcessConfigInfoResult">
        <result property="infoId"    column="info_id"    />
        <result property="processConfigId"    column="process_config_id"    />
        <result property="node"    column="node"    />
        <result property="userId"    column="user_id"    />
        <association property="user" column="user_name" javaType="SysUser" resultMap="processConfigInfoUserResult"/>

    </resultMap>


    <resultMap id="processConfigInfoUserResult" type="SysUser">
        <result property="userName" column="user_name"/>
    </resultMap>

    <sql id="selectSysProcessConfigInfoVo">
        select p.info_id, p.process_config_id, p.node, p.user_id, u.user_name from sys_process_config_info p
        inner join sys_user u on p.user_id = u.user_id
    </sql>

    <select id="selectSysProcessConfigInfoList" parameterType="SysProcessConfigInfo" resultMap="SysProcessConfigInfoResult">
        <include refid="selectSysProcessConfigInfoVo"/>
        <where>
            <if test="processConfigId != null  and processConfigId != ''"> and process_config_id = #{processConfigId}</if>
        </where>
        order by p.node asc
    </select>
    
    <select id="selectSysProcessConfigInfoByInfoId" parameterType="String" resultMap="SysProcessConfigInfoResult">
        <include refid="selectSysProcessConfigInfoVo"/>
        where info_id = #{infoId}
    </select>
        
    <insert id="insertSysProcessConfigInfo" parameterType="SysProcessConfigInfo" useGeneratedKeys="true" keyProperty="infoId">
        insert into sys_process_config_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="processConfigId != null and processConfigId != ''">process_config_id,</if>
            <if test="node != null and node != ''">node,</if>
            <if test="userId != null and userId != ''">user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="processConfigId != null and processConfigId != ''">#{processConfigId},</if>
            <if test="node != null and node != ''">#{node},</if>
            <if test="userId != null and userId != ''">#{userId},</if>
         </trim>
    </insert>

    <update id="updateSysProcessConfigInfo" parameterType="SysProcessConfigInfo">
        update sys_process_config_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="processConfigId != null and processConfigId != ''">process_config_id = #{processConfigId},</if>
            <if test="node != null and node != ''">node = #{node},</if>
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
        </trim>
        where info_id = #{infoId}
    </update>

    <delete id="deleteSysProcessConfigInfoByInfoId" parameterType="String">
        delete from sys_process_config_info where info_id = #{infoId}
    </delete>

    <delete id="deleteSysProcessConfigInfoByInfoIds" parameterType="String">
        delete from sys_process_config_info where info_id in 
        <foreach item="infoId" collection="array" open="(" separator="," close=")">
            #{infoId}
        </foreach>
    </delete>

    <select id="selectSysProcessConfigInfoListByDeptId" parameterType="Long" resultMap="SysProcessConfigInfoResult">
        select p.* from sys_process_config_info p
        inner join sys_process_config e on p.process_config_id = e.process_config_id
        <where>
            e.dept_id = #{deptId}
        </where>
        order by p.node asc
    </select>
</mapper>