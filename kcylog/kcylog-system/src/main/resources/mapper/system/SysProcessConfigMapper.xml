<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcylog.system.mapper.SysProcessConfigMapper">
    
    <resultMap type="SysProcessConfig" id="SysProcessConfigResult">
        <result property="processConfigId"    column="process_config_id"    />
        <result property="title"    column="title"    />
        <result property="deptId"    column="dept_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <association property="dept" column="dept_name" javaType="SysDept" resultMap="processConfigLogDeptResult"/>
    </resultMap>

    <resultMap id="processConfigLogDeptResult" type="SysDept">
        <result property="deptName" column="dept_name"/>
    </resultMap>

    <sql id="selectSysProcessConfigVo">
        select u.process_config_id, u.title, u.dept_id, u.create_time, u.update_time, d.dept_name from sys_process_config u
        inner join sys_dept d on u.dept_id = d.dept_id
    </sql>

    <select id="selectSysProcessConfigList" parameterType="SysProcessConfig" resultMap="SysProcessConfigResult">
        <include refid="selectSysProcessConfigVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="deptId != null  and deptId != ''"> and dept_id = #{deptId}</if>
        </where>
    </select>
    
    <select id="selectSysProcessConfigByProcessConfigId" parameterType="String" resultMap="SysProcessConfigResult">
        <include refid="selectSysProcessConfigVo"/>
        where process_config_id = #{processConfigId}
    </select>
        
    <insert id="insertSysProcessConfig" parameterType="SysProcessConfig" useGeneratedKeys="true" keyProperty="processConfigId">
        insert into sys_process_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="deptId != null and deptId != ''">dept_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="deptId != null and deptId != ''">#{deptId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysProcessConfig" parameterType="SysProcessConfig">
        update sys_process_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="deptId != null and deptId != ''">dept_id = #{deptId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where process_config_id = #{processConfigId}
    </update>

    <delete id="deleteSysProcessConfigByProcessConfigId" parameterType="String">
        delete from sys_process_config where process_config_id = #{processConfigId}
    </delete>

    <delete id="deleteSysProcessConfigByProcessConfigIds" parameterType="String">
        delete from sys_process_config where process_config_id in 
        <foreach item="processConfigId" collection="array" open="(" separator="," close=")">
            #{processConfigId}
        </foreach>
    </delete>
</mapper>