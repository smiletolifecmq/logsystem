<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcylog.system.mapper.SysCarReviewConfigMapper">
    
    <resultMap type="SysCarReviewConfig" id="SysCarReviewConfigResult">
        <result property="reviewConfigId"    column="review_config_id"    />
        <result property="title"    column="title"    />
        <result property="deptId"    column="dept_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <association property="dept" column="dept_name" javaType="SysDept" resultMap="processConfigLogDeptResult"/>
    </resultMap>

    <resultMap id="processConfigLogDeptResult" type="SysDept">
        <result property="deptName" column="dept_name"/>
    </resultMap>

    <sql id="selectSysCarReviewConfigVo">
        select u.review_config_id, u.title, u.dept_id, u.create_time, u.update_time, d.dept_name from sys_car_review_config u
        inner join sys_dept d on u.dept_id = d.dept_id
    </sql>

    <select id="selectSysCarReviewConfigList" parameterType="SysCarReviewConfig" resultMap="SysCarReviewConfigResult">
        <include refid="selectSysCarReviewConfigVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="deptId != null "> and dept_id = #{deptId}</if>
        </where>
    </select>
    
    <select id="selectSysCarReviewConfigByReviewConfigId" parameterType="Long" resultMap="SysCarReviewConfigResult">
        <include refid="selectSysCarReviewConfigVo"/>
        where review_config_id = #{reviewConfigId}
    </select>
        
    <insert id="insertSysCarReviewConfig" parameterType="SysCarReviewConfig" useGeneratedKeys="true" keyProperty="reviewConfigId">
        insert into sys_car_review_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysCarReviewConfig" parameterType="SysCarReviewConfig">
        update sys_car_review_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where review_config_id = #{reviewConfigId}
    </update>

    <delete id="deleteSysCarReviewConfigByReviewConfigId" parameterType="Long">
        delete from sys_car_review_config where review_config_id = #{reviewConfigId}
    </delete>

    <delete id="deleteSysCarReviewConfigByReviewConfigIds" parameterType="String">
        delete from sys_car_review_config where review_config_id in 
        <foreach item="reviewConfigId" collection="array" open="(" separator="," close=")">
            #{reviewConfigId}
        </foreach>
    </delete>
</mapper>