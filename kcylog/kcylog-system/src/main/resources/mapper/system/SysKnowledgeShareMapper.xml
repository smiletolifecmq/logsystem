<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kcylog.system.mapper.SysKnowledgeShareMapper">

    <resultMap type="SysKnowledgeShare" id="SysKnowledgeShareResult">
        <result property="knowledgeId" column="knowledge_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="introduction" column="introduction"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <collection property="manageFile" javaType="java.util.List" resultMap="manageFileResult"/>
        <collection property="user" column="user_name" javaType="SysUser" resultMap="knowledgeShareUserResult"/>
    </resultMap>

    <resultMap id="knowledgeShareUserResult" type="SysUser">
        <result property="userName" column="user_name"/>
    </resultMap>

    <resultMap type="SysManageFile" id="manageFileResult">
        <result property="fileId" column="file_id"/>
        <result property="newFileName" column="new_file_name"/>
        <result property="oldFileName" column="old_file_name"/>
        <result property="url" column="url"/>
        <result property="fileName" column="file_name"/>
        <result property="moduleId" column="module_id"/>
        <result property="moduleType" column="module_type"/>
    </resultMap>

    <sql id="selectSysKnowledgeShareVo">
        select k.*, f.new_file_name, f.old_file_name, f.url, f.file_name, u.user_name
        from sys_knowledge_share k
                 inner join sys_manage_file f on k.knowledge_id = f.module_id and f.module_type = 2
                 inner join sys_user u on k.user_id = u.user_id
    </sql>

    <select id="selectSysKnowledgeShareList" parameterType="SysKnowledgeShare" resultMap="SysKnowledgeShareResult">
        <include refid="selectSysKnowledgeShareVo"/>
        <where>
            <if test="title != null  and title != ''">and k.title = #{title}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(k.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(k.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
        order by k.knowledge_id asc
    </select>

    <select id="selectSysKnowledgeShareByKnowledgeId" parameterType="Long" resultMap="SysKnowledgeShareResult">
        <include refid="selectSysKnowledgeShareVo"/>
        where knowledge_id = #{knowledgeId}
    </select>

    <insert id="insertSysKnowledgeShare" parameterType="SysKnowledgeShare" useGeneratedKeys="true"
            keyProperty="knowledgeId">
        insert into sys_knowledge_share
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="introduction != null">introduction,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="introduction != null">#{introduction},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateSysKnowledgeShare" parameterType="SysKnowledgeShare">
        update sys_knowledge_share
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="introduction != null">introduction = #{introduction},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where knowledge_id = #{knowledgeId}
    </update>

    <delete id="deleteSysKnowledgeShareByKnowledgeId" parameterType="Long">
        delete
        from sys_knowledge_share
        where knowledge_id = #{knowledgeId}
    </delete>

    <delete id="deleteSysKnowledgeShareByKnowledgeIds" parameterType="com.kcylog.system.param.KnowledgeShareParams">
        delete from sys_knowledge_share where knowledge_id in
        <foreach item="knowledgeId" collection="knowledgeIds" open="(" separator="," close=")">
            #{knowledgeId}
        </foreach>
        and user_id = #{userId}
    </delete>

</mapper>