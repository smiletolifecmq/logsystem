<mapper namespace="com.kcylog.system.mapper.SysReviewMapper">
    
    <resultMap type="SysReview" id="SysReviewResult">
        <result property="reviewId"    column="review_id"    />
        <result property="serialNum"    column="serial_num"    />
        <result property="projectName"    column="project_name"    />
        <result property="requester"    column="requester"    />
        <result property="porjectMoney"    column="porject_money"    />
        <result property="workload"    column="workload"    />
        <result property="employmentReason"    column="employment_reason"    />
        <result property="userId"    column="user_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="status"    column="status"    />
        <result property="finalSecondStatus"    column="final_second_status"    />
        <result property="finalHire"    column="final_hire"    />
        <result property="peopleNum"    column="people_num"    />
        <result property="startEdit"    column="start_edit"    />
        <result property="subcontract"    column="subcontract"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="projectStart"    column="project_start"    />
        <result property="projectEnd"    column="project_end"    />
        <result property="budgetDay"    column="budget_day"    />
        <result property="budgetMoney"    column="budget_money"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="finalTime"    column="final_time"    />
        <association property="dept" column="dept_name" javaType="SysDept" resultMap="sysReviewDeptResult"/>
        <association property="user" column="user_name" javaType="SysUser" resultMap="sysReviewUserResult"/>
        <association property="reviewEmployee" javaType="java.util.List" resultMap="sysReviewReviewEmployeeResult"/>
    </resultMap>

    <resultMap type="SysReviewEmployee" id="sysReviewReviewEmployeeResult">
        <result property="reviewEmployeeId"    column="review_employee_id"    />
        <result property="name"    column="name"    />
        <result property="idCard"    column="id_card"    />
        <result property="workTime"    column="work_time"    />
        <result property="workDay"    column="work_day"    />
        <result property="cost"    column="cost"    />
        <result property="reviewId"    column="review_id"    />
    </resultMap>

    <resultMap id="sysReviewDeptResult" type="SysDept">
        <result property="deptName" column="dept_name"/>
    </resultMap>

    <resultMap id="sysReviewUserResult" type="SysUser">
        <result property="userName" column="user_name"/>
    </resultMap>


    <sql id="selectSysReviewVo">
        select r.*, d.dept_name, u.user_name from sys_review r
        inner join sys_dept d on r.dept_id = d.dept_id
        inner join sys_user u on r.user_id = u.user_id
    </sql>

    <select id="selectSysReviewList" parameterType="SysReview" resultMap="SysReviewResult">
        <include refid="selectSysReviewVo"/>
        <where>  
            <if test="serialNum != null  and serialNum != ''"> and r.serial_num like concat('%', #{serialNum}, '%')</if>
            <if test="projectName != null  and projectName != ''"> and r.project_name like concat('%', #{projectName}, '%')</if>
            <if test="requester != null  and requester != ''"> and r.requester = #{requester}</if>
            <if test="status != null "> and r.status = #{status}</if>
            <if test="userId != null  and userId != ''"> and r.user_id = #{userId}</if>
            <if test="deptId != null  and deptId != ''"> and r.dept_id = #{deptId}</if>
            <if test="finalHire != null"> and r.final_hire = #{finalHire}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
        order by r.review_id desc
    </select>
    
    <select id="selectSysReviewByReviewId" parameterType="String" resultMap="SysReviewResult">
        <include refid="selectSysReviewVo"/>
        where r.review_id = #{reviewId}
    </select>
        
    <insert id="insertSysReview" parameterType="SysReview" useGeneratedKeys="true" keyProperty="reviewId">
        insert into sys_review
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="serialNum != null and serialNum != ''">serial_num,</if>
            <if test="projectName != null and projectName != ''">project_name,</if>
            <if test="requester != null and requester != ''">requester,</if>
            <if test="porjectMoney != null">porject_money,</if>
            <if test="workload != null">workload,</if>
            <if test="employmentReason != null">employment_reason,</if>
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="deptId != null and deptId != ''">dept_id,</if>
            <if test="status != null">status,</if>
            <if test="peopleNum != null and peopleNum != ''">people_num,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="projectStart != null">project_start,</if>
            <if test="projectEnd != null">project_end,</if>
            <if test="budgetDay != null">budget_day,</if>
            <if test="budgetMoney != null">budget_money,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="finalTime != null">final_time,</if>
            <if test="subcontract != null">subcontract,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="serialNum != null and serialNum != ''">#{serialNum},</if>
            <if test="projectName != null and projectName != ''">#{projectName},</if>
            <if test="requester != null and requester != ''">#{requester},</if>
            <if test="porjectMoney != null">#{porjectMoney},</if>
            <if test="workload != null">#{workload},</if>
            <if test="employmentReason != null">#{employmentReason},</if>
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="deptId != null and deptId != ''">#{deptId},</if>
            <if test="status != null">#{status},</if>
            <if test="peopleNum != null and peopleNum != ''">#{peopleNum},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="projectStart != null">#{projectStart},</if>
            <if test="projectEnd != null">#{projectEnd},</if>
            <if test="budgetDay != null">#{budgetDay},</if>
            <if test="budgetMoney != null">#{budgetMoney},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="finalTime != null">#{finalTime},</if>
            <if test="subcontract != null">#{subcontract},</if>
         </trim>
    </insert>

    <update id="updateSysReview" parameterType="SysReview">
        update sys_review
        <trim prefix="SET" suffixOverrides=",">
            <if test="serialNum != null and serialNum != ''">serial_num = #{serialNum},</if>
            <if test="projectName != null and projectName != ''">project_name = #{projectName},</if>
            <if test="requester != null and requester != ''">requester = #{requester},</if>
            <if test="porjectMoney != null">porject_money = #{porjectMoney},</if>
            <if test="workload != null">workload = #{workload},</if>
            <if test="employmentReason != null">employment_reason = #{employmentReason},</if>
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="deptId != null and deptId != ''">dept_id = #{deptId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="peopleNum != null and peopleNum != ''">people_num = #{peopleNum},</if>
            <if test="startEdit != null">start_edit = #{startEdit},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            project_start = #{projectStart},
            project_end = #{projectEnd},
            <if test="budgetDay != null">budget_day = #{budgetDay},</if>
            <if test="budgetMoney != null">budget_money = #{budgetMoney},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="finalTime != null">final_time = #{finalTime},</if>
            <if test="subcontract != null">subcontract = #{subcontract},</if>
        </trim>
        where review_id = #{reviewId}
    </update>

    <delete id="deleteSysReviewByReviewId" parameterType="String">
        delete from sys_review where review_id = #{reviewId}
    </delete>

    <delete id="deleteSysReviewByReviewIds" parameterType="String">
        delete from sys_review where review_id in 
        <foreach item="reviewId" collection="array" open="(" separator="," close=")">
            #{reviewId}
        </foreach>
    </delete>

    <update id="setSysReviewStatusByReviewId" parameterType="SysReview">
        update sys_review
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="status != null and status != '' and status == 3">final_second_status = 0, final_hire = 0</if>
        </trim>
        where review_id = #{reviewId}
    </update>

    <select id="selectSysUpcomingReviewList" parameterType="SysReview" resultMap="SysReviewResult">
        <include refid="selectSysReviewVo"/>
        inner join sys_review_process rp on r.review_id = rp.review_id
        <where>
            <if test="serialNum != null  and serialNum != ''"> and r.serial_num = #{serialNum}</if>
            <if test="projectName != null  and projectName != ''"> and r.project_name like concat('%', #{projectName}, '%')</if>
            <if test="requester != null  and requester != ''"> and r.requester = #{requester}</if>
            <if test="deptId != null  and deptId != ''"> and r.dept_id = #{deptId}</if>
            <if test="fzrUserId != null  and fzrUserId != ''"> and r.user_id = #{fzrUserId}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
            <if test="userId != null  and userId  == 8">
                AND r.final_hire = 1
            </if>
        </where>
        AND rp.user_id = #{userId}
        AND rp.status = 1
        order by r.review_id desc
    </select>

    <select id="selectCompletedReviewList" parameterType="SysReview" resultMap="SysReviewResult">
        <include refid="selectSysReviewVo"/>
        <where>
            <if test="serialNum != null  and serialNum != ''"> and r.serial_num = #{serialNum}</if>
            <if test="projectName != null  and projectName != ''"> and r.project_name like concat('%', #{projectName}, '%')</if>
            <if test="requester != null  and requester != ''"> and r.requester = #{requester}</if>
            <if test="status != null "> and r.status = #{status}</if>
            <if test="deptId != null "> and r.dept_id = #{deptId}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
        order by r.review_id desc
    </select>

    <select id="selectDoneReviewList" parameterType="SysReview" resultMap="SysReviewResult">
        <include refid="selectSysReviewVo"/>
        inner join sys_review_process rp on r.review_id = rp.review_id
        <where>
            <if test="serialNum != null  and serialNum != ''"> and r.serial_num = #{serialNum}</if>
            <if test="projectName != null  and projectName != ''"> and r.project_name like concat('%', #{projectName}, '%')</if>
            <if test="requester != null  and requester != ''"> and r.requester = #{requester}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
            <if test="employmentReason != null  and employmentReason == 1"> and (r.final_hire = 1 and rp.status = 2)</if>
            <if test="employmentReason != null  and employmentReason == 2"> and (r.final_hire = 0 and rp.status = 2)</if>
            <if test="employmentReason == null  or employmentReason == 0"> AND (rp.status = 2 OR rp.status = 3)</if>
        </where>
        AND rp.user_id = #{userId}
        order by rp.review_time desc
    </select>

    <update id="updateSysReviewFinalTime" parameterType="SysReview">
        update sys_review
        set final_time = #{finalTime}
        where review_id = #{reviewId}
    </update>

    <update id="setSysReviewFinalSecondStatusByReviewId" parameterType="SysReview">
        update sys_review
        set final_second_status = #{finalSecondStatus}
        where review_id = #{reviewId}
    </update>

    <update id="updateStartEditByReviewId" parameterType="SysReview">
        update sys_review
        <trim prefix="SET" suffixOverrides=",">
            <if test="startEdit != null and startEdit != ''">start_edit = #{startEdit},</if>
        </trim>
        where review_id = #{reviewId}
    </update>

    <update id="generateStatement" parameterType="SysReview">
        update sys_review
        set status = 4,start_edit = 0
        where review_id in
        <foreach item="reviewId" collection="reviewIds" open="(" separator="," close=")">
            #{reviewId}
        </foreach>
    </update>

    <sql id="selectSysReviewBySettlementVo">
        select r.*, d.dept_name, u.user_name from sys_review r
        inner join sys_dept d on r.dept_id = d.dept_id
        inner join sys_user u on r.user_id = u.user_id
        inner join sys_settlement_associate a on r.review_id = a.review_id
    </sql>

    <select id="settlementListReview" parameterType="SysReview" resultMap="SysReviewResult">
        <include refid="selectSysReviewBySettlementVo"/>
        and a.settlement_id = #{settlementId}
        <where>
            <if test="serialNum != null  and serialNum != ''"> and r.serial_num = #{serialNum}</if>
            <if test="projectName != null  and projectName != ''"> and r.project_name like concat('%', #{projectName}, '%')</if>
            <if test="requester != null  and requester != ''"> and r.requester = #{requester}</if>
            <if test="status != null "> and r.status = #{status}</if>
            <if test="deptId != null "> and r.dept_id = #{deptId}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(r.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
        order by review_id desc
    </select>

    <sql id="selectSysReviewSettlementVo">
        select r.*, d.dept_name, u.user_name from sys_review r
        inner join sys_dept d on r.dept_id = d.dept_id
        inner join sys_user u on r.user_id = u.user_id
        inner join sys_settlement_associate a on r.review_id = a.review_id
    </sql>
    <select id="selectSysReviewListBySettlementId" parameterType="SysReview" resultMap="SysReviewResult">
        <include refid="selectSysReviewSettlementVo"/>
        <where>
            <if test="status != null "> and r.status = #{status}</if>
             and a.settlement_id = #{settlementId}
        </where>
        order by review_id desc
    </select>

    <update id="updateFinalHireByReviewId" parameterType="Long">
        update sys_review
        set final_hire = 1
        where review_id = #{reviewId}
    </update>

    <select id="getReviewBySerialNum" parameterType="String" resultMap="SysReviewResult">
        <include refid="selectSysReviewVo"/>
        where serial_num = #{serialNum}
        limit 1
    </select>

    <select id="getSubcontractReview" parameterType="String" resultMap="SysReviewResult">
        SELECT a.*, u.user_name FROM sys_review a
        INNER JOIN sys_user u on u.user_id = a.user_id  where a.serial_num = #{serialNum} LIMIT 1
    </select>
</mapper>